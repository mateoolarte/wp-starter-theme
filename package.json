{
  "name": "starter-theme",
  "version": "0.0.1",
  "description": "Modern workflow to create themes with Wordpress. You can work with a modern process with Gulp tasks and Webpack JS bundling",
  "main": "gulpfile.js",
  "proxy": "http://startertheme.local/",
  "scripts": {
    "fmt": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md,mdx,yml,yaml,scss}\"",
    "lint-styles": "stylelint '**/*.scss' --syntax=scss --fix",
    "lint-scripts": "eslint . --ext js,jsx,ts,tsx --fix --max-warnings=0",
    "lint": "yarn fmt && yarn lint-styles && yarn lint-scripts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateoolarte/timber-starter-theme.git"
  },
  "keywords": [
    "prettier",
    "eslint",
    "npm",
    "yarn",
    "editorconfig",
    "git",
    "config",
    "wordpress",
    "starter-theme"
  ],
  "author": "Mateo Olarte <mateo.olarte8@gmail.com>",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/mateoolarte/timber-starter-theme/blob/master/README.md",
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11",
    "maintained node versions",
    "> 5%",
    "last 2 version"
  ],
  "engines": {
    "node": "<= 12.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "autoprefixer": "^9.8.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gulp": "^4.0.2",
    "gulp-cache": "^1.1.3",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-load-plugins": "^2.0.3",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-purgecss": "^2.3.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "gulp-wp-pot": "^2.4.3",
    "gulp-zip": "^5.0.1",
    "husky": ">=4",
    "lint-staged": ">=10",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.0",
    "stylelint-config-standard": "^20.0.0",
    "webpack": "^4.43.0",
    "webpack-stream": "^5.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,json,ts,tsx,md,mdx,yml,yaml,scss}": "prettier --write",
    "*.scss": "stylelint --syntax=scss"
  }
}
